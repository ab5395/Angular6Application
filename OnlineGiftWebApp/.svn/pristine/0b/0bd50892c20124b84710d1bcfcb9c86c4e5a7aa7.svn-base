<div *ngIf="linkExpired==true">
  <div class="container-fluid login-main-bg d-flex w-100">
    <div class="container align-self-center ">
      <div fxLayout="row wrap" class="justify-content-center ">
        <div fxFlex="35%" fxFlex.xs="100%" fxFlex.sm="100%">

          <div fxLayout="row wrap" class="login-box">
            <div fxFlex="100%" class="bg-white order-xs-2">
              <div class="login-form">
                <div class="text-center mb-2 mt-3 d-xs-none">
                  <img src="../../assets/images/logo.png" class="d-inline-block login-logo" alt="" />
                </div>
                <p class="text-center mb-3 text-muted pt-3 pt-sm-0">Reset Password</p>
                <h4 class="text-center text-muted">Your Link has been Expired</h4>
                <div class="text-center mb-3">
                  <a mat-raised-button color="primary" [routerLink]="['/account/login']" class="w-100 text-white font-size-16px font-weight-400">back to Login</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div *ngIf="linkExpired==false">
  <div class="container-fluid login-main-bg d-flex w-100">
    <div class="container align-self-center ">
      <div fxLayout="row wrap" class="justify-content-center ">
        <div fxFlex="83%" fxFlex.xs="100%" fxFlex.sm="100%">

          <div fxLayout="row wrap" class="login-box">
            <div fxFlex="41.666%" fxFlex.sm="58%" fxFlex.xs="100%" class="bg-white order-xs-2">
              <mat-progress-bar mode="indeterminate" *ngIf="isProgressVisible"></mat-progress-bar>
              <div class="login-form">
                <div class="text-center mb-2 mt-3 d-xs-none">
                  <img src="../../assets/images/logo.png" class="d-inline-block login-logo" alt="" />
                </div>
                <p class="text-center mb-3 text-muted pt-3 pt-sm-0">Reset Password</p>
                <form name="frmResetPassword" role="form" [formGroup]="frmResetPassword" (submit)="resetPassword()">
                  <mat-form-field class=" w-100">
                    <input type="password" matInput placeholder="Enter New Password" value="" required color="primary" formControlName="password"
                      advs-compare="confirmPassword" parent='true'>
                    <mat-error>
                      <control-messages [control]="frmResetPassword.controls.password" msg="Password is required"></control-messages>
                    </mat-error>
                  </mat-form-field>
                  <mat-form-field class=" w-100">
                    <input type="password" matInput placeholder="Enter Confirm Password" value="" required color="primary" formControlName="confirmPassword"
                      required advs-compare="password" parent='false'>
                    <mat-error>
                      <control-messages [control]="frmResetPassword.controls.confirmPassword" msg="Confirm Password is required"></control-messages>
                    </mat-error>
                  </mat-form-field>
                  <div class="text-center mb-3">
                    <button mat-raised-button color="primary" type="submit" [disabled]="!frmResetPassword.valid||isBtnDisabled" class="w-100 text-white font-size-16px font-weight-400">Change Password</button>
                  </div>
                </form>
                <div class="text-center text-muted pt-5 pb-2">
                  Back To
                  <a class="blue-link" [routerLink]="['/account/login']">LogIn</a>
                </div>
              </div>
            </div>
            <div fxFlex="58.333333%" fxFlex.sm="42%" fxFlex.xs="100%" class="col-lg-7 px-0 col-sm-5 order-1 order-sm-2 order-xs-1">
              <div class="login-image-bg h-100 d-flex justify-content-center">
                <div class="align-self-center text-center">
                  <img src="../../assets/images/white-logo.png" alt="" class="bg-image-logo" />
                  <h1 class="text-white bg-image-content">From Friendship To Love</h1>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
