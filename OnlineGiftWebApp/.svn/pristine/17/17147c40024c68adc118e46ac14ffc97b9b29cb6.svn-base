<div class="container-fluid login-main-bg d-flex w-100">
  <div class="container align-self-center ">
    <div fxLayout="row wrap" class="justify-content-center ">
      <div fxFlex="83%" fxFlex.xs="100%" fxFlex.sm="100%">

        <div fxLayout="row wrap" class="login-box">
          <div fxFlex="41.666%" fxFlex.sm="58%" fxFlex.xs="100%" class="bg-white order-xs-2">
            <mat-progress-bar mode="indeterminate" *ngIf="isProgressVisible"></mat-progress-bar>
            <div class="login-form">
              <div class="text-center mb-2 mt-1 d-xs-none">
                <a class="mr-2" [routerLink]="['/home']">
                  <img src="../../assets/images/logo.png" class="d-inline-block login-logo" alt="Pyarana" />
                </a>
              </div>
              <p class="text-center mb-3 text-muted pt-3 pt-sm-0">Forget Password</p>

              <form name="frmForgetPassword" role="form" [formGroup]="frmForgetPassword" (submit)="forgetPassword()">
                <mat-form-field class=" w-100">
                  <input type="email" name="email" id="email" matInput placeholder="Email" value="" required color="primary" formControlName="email">
                  <mat-error>
                    <control-messages [control]="frmForgetPassword.controls.email" msg="Email is required"></control-messages>
                  </mat-error>
                </mat-form-field>
                <div class="text-center mb-3">
                  <!--<a href="#" class="btn btn-login d-block px-4">Get Started</a>-->
                  <button mat-raised-button color="primary" type="submit" [disabled]="!frmForgetPassword.valid||isBtnDisabled" class="w-100 text-white font-size-16px font-weight-400">Submit</button>
                </div>
              </form>
              <div class="text-center text-muted pt-5 pb-2">
                Back To
                <a [routerLink]="['/account/login']" class="blue-link">LogIn</a>
              </div>
            </div>
          </div>
          <div fxFlex="58.333333%" fxFlex.sm="42%" fxFlex.xs="100%" class="col-lg-7 px-0 col-sm-5 order-1 order-sm-2 order-xs-1">
            <div class="login-image-bg h-100 d-flex justify-content-center">
              <div class="align-self-center text-center">
                <a class="mr-2" [routerLink]="['/home']">
                  <img src="../../assets/images/logo.png" class="bg-image-logo" alt="Pyarana" />
                </a>
                <h1 class="text-white bg-image-content">From Friendship To Love</h1>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
